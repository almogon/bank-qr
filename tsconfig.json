{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2019",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    // Change this paths keys
    "paths": {
      "@app/*": ["*"]
    },
  },
  "exclude": ["node_modules", "**/node_modules/*", ".vscdode/**", ".gitignore"]
}
